      <abstract><p>
        Сообщение <persName ref="Бенкендорф">Бенкендорфа</persName> <persName ref="Лопухин">Лопухину</persName> о
        возвращении семи арестованных <orgName ref="Хасиды">хасидов</orgName> из <placeName ref="Рига">Риги</placeName>
        в <placeName ref="Вильна">Вильно</placeName>
      </p></abstract>
      <creation><date when="1798-11-20">ноября 20 дня 1798</date></creation>
      <correspDesc><correspAction><persName ref="Лопухин" role="addressee">Лопухину</persName></correspAction>
      </correspDesc>
