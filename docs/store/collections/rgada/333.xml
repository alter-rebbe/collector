      <abstract><p>
        Сообщение <persName ref="Беклешов">Беклешова</persName> <persName ref="фонъ_Дер_Пален">Палену</persName> о
        решении императора освободить <persName ref="alter-rebbe">Шнеура Залмана</persName> и отпустить из <placeName
        ref="Петербург">Петербурга</placeName> в <placeName ref="Лозна">Лиозно</placeName>
      </p></abstract>
      <creation><date when="1801-03-27">марта 27 дня 1801</date></creation>
      <correspDesc><correspAction><persName ref="фонъ_Дер_Пален" role="addressee">Палену</persName></correspAction>
      </correspDesc>
