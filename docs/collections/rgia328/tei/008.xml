					<date when="1800-08-20">20<hi rend="superscript">го</hi> Августа<lb/>
						1800<hi rend="superscript">го</hi> года
					</date>
				</l>
				<l><placeName ref="Вильно">вильна</placeName>.</l>
			</closer>
		</body>
